<!doctype html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/styles/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/d8a373be04.js" crossorigin="anonymous"></script>

</head>

<body>

    <!--  -->
    <div class="py-5">
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/home">JUST CANVAS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">

                        <% if(user){ %>

                            <li class="nav-item">
                                <a class="nav-link" href="/admin/category" href="">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/create-category">Create Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/magazine">Manage Magazine</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/editor">Editor</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/auth/logout">Logout</a>
                            </li>
                            <% }else{ %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/auth/google">Login</a>
                                </li>
                                <% } %>

                    </ul>

                </div>
            </div>
        </nav>
    </div>
    <!--  -->

    <div class="container">
        <div class="row">
            <div class="col-md-6 full-content">
                <h2 class="section-title no-border "><span>Latest</span> From Blog</h2>
                <div class="mb-3"></div>
                <hr>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <% if(posts.length<=0){ %>
                    <p>There Is No Post</p>
                    <% }else { %>
                        <div class="row">
                            <% for(let post of posts){ %>
                                <div class="col-md-6 col-xl-4">
                                    <article class="post">
                                        <div class="article-v2">
                                            <figure class="article-thumb">
                                                <% if(post.thumbnail){ %>
                                                    <a href="">
                                                        <img src="<%= post.thumbnail %>" alt="blog image" height="280" width="350" />
                                                    </a>
                                                    <% } %>
                                            </figure>

                                            <div class="article-content-main">
                                                <div class="article-header">
                                                    <h2 class="entry-title">
                                                        <a href="#">
                                                            <%= post.title %>
                                                        </a>
                                                    </h2>
                                                    <div class="entry-meta">
                                                        <div class="entry-date">
                                                            <%= moment(post.createdAt) %>
                                                        </div>

                                                        <div class="entry-cat">
                                                            <a href="#">
                                                                <%= post.category %>
                                                            </a>
                                                        </div>

                                                    </div>

                                                </div>

                                                <div class="article-content">
                                                    <p>
                                                        <%= truncate(post.body) %>
                                                    </p>

                                                </div>

                                                <div class="article-footer">

                                                    <div class="row justify-content-between">
                                                        <a href="/post/post-details/<%= post._id %>" class="more-link">Read More</a>
                                                        <a href="#" style="pointer-events: none;">
                                                            <%= post.comments.length %><i class="pe-7s-comment"></i></a>
                                                    </div>
                                                    <hr>
                                                    <div class="row justify-content-between">
                                                        <a href="/post/post-details/<%= post._id %>" class="btn btn-success btn-sm" style="pointer-events: none;">Likes ( <%= post.likes.length %> )</a>
                                                        <a href="/post/post-details/<%= post._id %>" class="btn btn-danger btn-sm" style="pointer-events: none;">Dislikes ( <%= post.dislikes.length %> )</a>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                </div>

                                <% } %>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>

</body>

</html>