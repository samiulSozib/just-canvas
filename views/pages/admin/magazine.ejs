<!doctype html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/styles/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/d8a373be04.js" crossorigin="anonymous"></script>

</head>

<body>

    <!--  -->
    <div class="py-5">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/home">JUST CANVAS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">

                        <% if(user){ %>

                            <li class="nav-item">
                                <a class="nav-link" href="/admin/category" href="">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/create-category">Create Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/magazine">Manage Magazine</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/editor">Editor</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/auth/logout">Logout</a>
                            </li>
                            <% }else{ %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/auth/google">Login</a>
                                </li>
                                <% } %>

                    </ul>

                </div>
            </div>
        </nav>
    </div>
    <!--  -->

    <div class="container">
        <h5>All Posts</h5>
        <hr>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 5%" scope="col"></th>
                        <th style="width: 60%" scope="col">Title</th>
                        <th style="width: 15%" scope="col">Author</th>
                        <th style="width: 10%" scope="col">Status</th>
                        <th style="width: 10%"></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0;i<posts.length;i++){ %>
                        <% if(posts[i].status!='0'){ %>
                            <tr>
                                <th scope="row">
                                    <%= i+1 %>
                                </th>
                                <td>
                                    <%= posts[i].title %>
                                </td>
                                <td>
                                    <a href="">
                                        <%= posts[i].author_name %>
                                    </a>
                                </td>
                                <td>
                                    <% if(posts[i].status==='-1'){ %>
                                        <button class="btn btn-danger">Pending</button>
                                        <% }else if(posts[i].status==='1'){ %>
                                            <button class="btn btn-success">Approved</button>
                                            <% } %>
                                </td>
                                <td><a href="/admin/magazine-details/<%= posts[i].id %>" class="btn btn-info">Details</a></td>
                            </tr>
                            <% } %>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>

</body>

</html>